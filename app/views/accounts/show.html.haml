%div{"data-role" => "header"}
  %h1= @account.to_s
  %a{:href => accounts_path, :class => "ui-btn-left ui-btn-back", "data-icon" => "arrow-l"}Back
%div{"data-role" => "content"}
  %ul{"data-role" => "listview"}
    -@account.envelopes.each do |envelope|
      %li
        %a{:href => account_envelope_path(@account,envelope)}
          =envelope.name
          %div{:class => "ui-li-aside ui-li-desc"}
            %strong=number_to_currency(envelope.balance)
